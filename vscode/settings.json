// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Input Mono",
  "editor.tabCompletion": "on",
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "javascript.format.enable": false,
  "prettier.eslintIntegration": true,
  "editor.renderWhitespace": "none",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.smoothScrolling": false,
  "[javascript]": {
    "editor.formatOnSave": true
  },
  // Workbench
  // Light theme
  // "workbench.colorTheme": "Solarized Light",
  // Dark theme
  "workbench.colorTheme": "Quiet Light",
  "workbench.iconTheme": "Monokai Pro (Filter Octagon) Icons",
  "workbench.editor.revealIfOpen": true,
  "workbench.sideBar.location": "left",
  "terminal.integrated.fontFamily": "Source Code Pro",
  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  // Linting
  "python.pythonPath": "/usr/bin/python3",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pylintArgs": ["--errors-only"],
  "jshint.enable": false,
  // Excluded files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__/": true,
    "**/.vscode": true,
    "**/__init__.py": true,
    // Latex workshop
    "**/*.aux": true,
    "**/*.bbl": true,
    "**/*.bcf": true,
    "**/*_latexmk": true,
    "**/*.fls": true,
    "**/*.blg": true,
    "**/*.lof": true,
    "**/*.log": true,
    "**/*.lot": true,
    "**/*.out": true,
    "**/*.toc": true,
    "node_modules/": true,
    ".expo/": true,
    "**/__snapshots__": true
  },
  // Other
  "window.zoomLevel": 0,
  "latex-workshop.view.pdf.viewer": "browser",
  "latex-workshop.latex.autoBuild.onSave.enabled": false,
  "window.menuBarVisibility": "toggle",
  "extensions.ignoreRecommendations": false,
  "breadcrumbs.enabled": true,
  "cquery.formatting.enabled": false,
  "[cpp]": {
    "editor.codeLens": false
  },
  "cquery.launch.notifyOnCrash": true,
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google,                                                  IndentWidth: 4, ColumnLimit: 0}",
  "python.formatting.provider": "none",
  "editor.fontWeight": "400",
  "ccls.launch.command": "/home/alexander/tmp/ccls/Release/ccls",
  "C_Cpp.autocomplete": "Disabled",
  "C_Cpp.formatting": "Disabled",
  "C_Cpp.errorSquiggles": "Disabled",
  "C_Cpp.intelliSenseEngine": "Disabled",
  "ccls.highlighting.bold.globalVariables": true,
  "ccls.highlighting.bold.memberFunctions": true
}
